<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<referenceBlock name="header.links">
			<block class="Magento\Framework\View\Element\Html\Link\Current" name="storelocator" ifconfig="StoreLocator/module/storelocatorlink" >
				<arguments>
					<argument name="label" xsi:type="helper" helper="Mageants\StoreLocator\Helper\Data::getStoreLocatorTitle"/>
					<argument name="path" xsi:type="helper" helper="Mageants\StoreLocator\Helper\Data::getFrontName"/>
				</arguments>
			</block>
		</referenceBlock>
	</body>
</page>