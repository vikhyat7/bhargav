<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="checkout.cart.container">
            <block class="Magestore\Customercredit\Block\Cart\CreditForm" name="checkout.cart.creditform" as="creditform" template="Magestore_Customercredit::cart/creditform.phtml" />
        </referenceContainer>
        <move element="checkout.cart.creditform" destination="checkout.cart.container" after="checkout.cart.coupon"/>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="before_grandtotal" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="creditdiscount" xsi:type="array">
                                            <item name="component" xsi:type="string">Magestore_Customercredit/js/view/cart/totals/creditdiscount</item>
                                            <item name="config" xsi:type="array">
                                                <item name="title" xsi:type="string" translate="true">Customer Credit</item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
