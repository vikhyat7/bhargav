<script>
    require([
        'jquery'
    ], function ($) {
        var testAPIUrl = '<?php echo $block->getTestApiUrl();?>';
        $(document).ready(function(){
            $('#webpos-stripe-integration-test-api').click(function(){
                $("#webpos-stripe-integration-test-response .loader").removeClass('hide');
                $.ajax({
                    method:'get',
                    url: testAPIUrl
                }).complete(function( result, status) {
                    $("#webpos-stripe-integration-test-response .loader").addClass('hide');
                    if(status == 'success'){
                        var response = JSON.parse(result.responseText);
                        if(response && response.success){
                            $("#webpos-stripe-integration-test-response .success").removeClass('hide');
                            $("#webpos-stripe-integration-test-response .error").addClass('hide');
                        }else{
                            if(response && response.message){
                                alert(response.message);
                            }
                            $("#webpos-stripe-integration-test-response .success").addClass('hide');
                            $("#webpos-stripe-integration-test-response .error").removeClass('hide');
                        }
                    }else{
                        alert('<?php echo __('Please check your network connection');?>');
                    }
                });
            });
        });
    });
</script>
