            <argument name="data" xsi:type="array">
                <item name="stripe_integration" xsi:type="string">stripe_integration</item>
            </argument>
        </arguments>
    </type>

    <type name="Magestore\Payment\Model\Payment\RefundType\AcceptedPayments">
