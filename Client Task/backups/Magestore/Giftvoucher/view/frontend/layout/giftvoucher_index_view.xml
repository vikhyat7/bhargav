<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <title>Gift Card</title>
        <css src="Magestore_Giftvoucher::css/magestore/giftvoucher.css"/>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Gift Card</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magestore\Giftvoucher\Block\Account\GiftCode" name="giftvoucher_view" template="giftvoucher/giftcard/view.phtml" cacheable="false">
                <block class="Magestore\Giftvoucher\Block\Account\GiftCode" name="giftvoucher.basic" template="giftvoucher/giftcard/basic.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
