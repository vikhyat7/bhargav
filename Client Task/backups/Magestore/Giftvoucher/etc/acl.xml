<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::marketing">
                    <resource id="Magestore_Giftvoucher::giftcard" title="Gift Card" sortOrder="30">
                        <resource id="Magestore_Giftvoucher::giftproduct" title="Manage Gift Card Products" sortOrder="10"/>
                        <resource id="Magestore_Giftvoucher::giftvoucher" title="Manage Gift Codes" sortOrder="20"/>
                        <resource id="Magestore_Giftvoucher::generategiftcard" title="Generate Gift Codes" sortOrder="40"/>
                        <resource id="Magestore_Giftvoucher::gifthistory" title="Gift code History" sortOrder="50"/>
                        <resource id="Magestore_Giftvoucher::gifttemplate" title="Manage Templates" sortOrder="60"/>                        
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magestore_Giftvoucher::settings" title="Gift Card Settings"/>
                        </resource>
                    </resource>
                </resource>                
            </resource>
        </resources>
    </acl>
</config>