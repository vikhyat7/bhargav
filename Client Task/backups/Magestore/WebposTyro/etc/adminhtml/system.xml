<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="webpos">
            <group id="payment">
                <group id="tyro" translate="label" sortOrder="100" type="text"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1"
                >
                    <label>Tyro</label>
                    <field id="enable" translate="label" sortOrder="1" type="select"
                           showInDefault="1"
                           showInWebsite="1"
                           showInStore="0"
                    >
                        <label>Enabled</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="title" translate="label" sortOrder="15" type="text"
                           showInDefault="1"
                           showInWebsite="0"
                           showInStore="1"
                    >
                        <label>Title</label>
                        <depends>
                            <field id="enable">1</field>
                        </depends>
                        <validate>required-entry</validate>
                    </field>
                    <field id="merchant_id" translate="label" sortOrder="16" type="text"
                           showInDefault="1"
                           showInWebsite="1"
                           showInStore="0"
                    >
                        <label>Merchant ID</label>
                        <depends>
                            <field id="enable">1</field>
                        </depends>
                    </field>
                    <field id="api_key" translate="label" sortOrder="20" type="text"
                           showInDefault="1"
                           showInWebsite="1"
                           showInStore="0"
                    >
                        <label>API Key</label>
                        <depends>
                            <field id="enable">1</field>
                        </depends>
                    </field>
                    <field id="mode" translate="label" type="select" sortOrder="25"
                           showInDefault="1"
                           showInWebsite="1"
                           showInStore="0"
                    >
                        <label>Mode</label>
                        <source_model>Magestore\WebposTyro\Model\Source\Mode</source_model>
                        <validate>required-entry</validate>
                        <depends>
                            <field id="*/*/*/enable">1</field>
                        </depends>
                    </field>
                    <field id="sort_order" translate="label" sortOrder="30" type="text"
                           showInDefault="1"
                           showInWebsite="0"
                           showInStore="1"
                    >
                        <label>Sort Order</label>
                        <depends>
                            <field id="*/*/*/enable">1</field>
                        </depends>
                    </field>
                </group>
            </group>
        </section>
    </system>
</config>