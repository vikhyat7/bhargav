<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="AdminStocktakingGeneralSection">
        <element name="source_code" type="select" selector="select[name=source_code]"/>
        <element name="stocktaking_type" type="select" selector="select[name=stocktaking_type]"/>
        <element name="created_at" type="input" selector="input[name=created_at]"/>
        <element name="assign_user_id" type="select" selector="select[name=assign_user_id]"/>
        <element name="description" type="input" selector="textarea[name=description]"/>
        <element name="saveButton" type="button" selector="#save"/>
        <element name="fieldError" type="text" selector="//input[@name='{{fieldName}}']/following-sibling::label[@class='admin__field-error']" parameterized="true"/>
        <element name="selectError" type="text" selector="//select[@name='{{fieldName}}']/following-sibling::label[@class='admin__field-error']" parameterized="true"/>
    </section>
</sections>
