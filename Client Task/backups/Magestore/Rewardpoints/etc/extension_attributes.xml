<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magestore\Webpos\Api\Data\Config\ConfigInterface">
        <attribute code="rewardpoints_rate" type="Magestore\Rewardpoints\Api\Data\Integration\Webpos\RateInterface[]" />
    </extension_attributes>
    <extension_attributes for="Magento\Customer\Api\Data\CustomerInterface">
        <attribute code="point_balance" type="float"/>
    </extension_attributes>
    <extension_attributes for="Magestore\Webpos\Api\Data\Checkout\OrderInterface">
        <attribute code="rewardpoints_spent" type="int" />
        <attribute code="rewardpoints_earn" type="int" />
        <attribute code="rewardpoints_base_discount" type="float" />
        <attribute code="rewardpoints_discount" type="float" />
        <attribute code="rewardpoints_base_amount" type="float" />
        <attribute code="rewardpoints_amount" type="float" />
        <attribute code="rewardpoints_base_discount_for_shipping" type="float" />
        <attribute code="rewardpoints_discount_for_shipping" type="float" />
        <attribute code="creditmemo_rewardpoints_earn" type="float" />
        <attribute code="creditmemo_rewardpoints_discount" type="float" />
        <attribute code="creditmemo_rewardpoints_base_discount" type="float" />
    </extension_attributes>
    <!-- Credit memo extension attributes -->
    <extension_attributes for="Magestore\Webpos\Api\Data\Sales\Order\CreditmemoInterface">
        <attribute code="rewardpoints_discount" type="float"/>
        <attribute code="rewardpoints_base_discount" type="float"/>
        <attribute code="rewardpoints_earn" type="float"/>
        <attribute code="refund_earned_points" type="float"/>
        <attribute code="refund_points" type="float"/>
    </extension_attributes>
    <!-- Credit memo extension attributes -->

    <extension_attributes for="Magestore\Webpos\Api\Data\Checkout\Order\ItemInterface">
        <attribute code="rewardpoints_discount" type="float"/>
        <attribute code="rewardpoints_base_discount" type="float"/>
        <attribute code="rewardpoints_earn" type="int"/>
        <attribute code="rewardpoints_spent" type="int"/>
    </extension_attributes>
</config>

