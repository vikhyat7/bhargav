<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Sales:etc/pdf_file.xsd">
    <totals>
        <total name="rewardpoints">
            <title translate="true">Use points on spend</title>
            <source_field>rewardpoints_discount</source_field>
            <model>Magestore\Rewardpoints\Model\Total\Pdf\Point</model>
            <font_size>7</font_size>
            <display_zero>false</display_zero>
            <sort_order>150</sort_order>
        </total>
        <total name="rewardpoints_earn">
            <title translate="true">Earn points</title>
            <source_field>rewardpoints_earn</source_field>
            <model>Magestore\Rewardpoints\Model\Total\Pdf\Pointearn</model>
            <font_size>7</font_size>
            <display_zero>false</display_zero>
            <sort_order>140</sort_order>
        </total>
    </totals>
</config>
