                    <argument name="path" xsi:type="string">rewardpoints</argument>
                    <argument name="label" xsi:type="helper" helper="Magestore\Rewardpoints\Helper\Data::getMyRewardsLabel"/>
                </arguments>
            </block>
        </referenceBlock>

    </body>
</page>
