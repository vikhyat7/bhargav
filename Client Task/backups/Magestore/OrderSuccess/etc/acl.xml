                                  title="On Hold Orders"
                                  sortOrder="40"
                                  translate="title"/>       
                        <resource id="Magestore_OrderSuccess::completed"
                                  title="Completed Order"
                                  sortOrder="50"
                                  translate="title"/>       
                        <resource id="Magestore_OrderSuccess::canceled"
                                  title="Canceled Orders"
                                  sortOrder="60"
                                  translate="title"/>                                                    
                    </resource>        
                    <resource id="Magestore_OrderSuccess::setting"
                              title="Settings"
                              sortOrder="30"
                              translate="title">
                        <resource id="Magestore_OrderSuccess::configuration_menu"
                                  title="Order Configuration"
                                  sortOrder="10"
                                  translate="title"/>                          
                    </resource>                                    
                </resource>

                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magestore_OrderSuccess::configuration"
                                      title="Order Configuration"
                                      translate="title"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>