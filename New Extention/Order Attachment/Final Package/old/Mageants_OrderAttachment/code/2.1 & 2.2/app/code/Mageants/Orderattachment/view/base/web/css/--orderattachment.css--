.attachment-drag-area {
    width: 30%;
    /*text-align: center;*/
    padding: 50px 0;
    border: 2px dashed #808080;
    background-color: #d1846721 !important;
    background-image: url(../images/atch.png);
    background-repeat: no-repeat;
    background-position: center;
    border-radius: 20px;
    margin-left: 30rem !important;
    margin-bottom: 15px !important;

}
h4 {
    font-weight: 700;
    line-height: 1.1;
    font-size: 1.4rem;
    margin-top: 5rem;
    margin-bottom: -4rem;
    margin-left: 5rem;
}

.attachment-row {
    overflow: hidden;
    width: 100%;
    margin: 5px 0;
    /*border-bottom: 1px solid #ccc;*/
    position: relative;
}
.checkout-orderattachment{
    padding-bottom: 10px;
    padding-top: 10px;
}
.attachment-row .filename {
    color: rgba(0,0,0,0.5);
    font-size: 0.7em;
}
.order-attachment-content video,
.order-attachment-content audio { width: 100%; }
.order-attachment-content textarea { width: 80%;  margin-top: 20px;     border-radius: 20px;}
.attachment-row .order-attachment-preview {
    width: 25%;
    display: table-cell;
    height: 150px;
    text-align: center;
    border: 2px solid gray;
    border-radius: 20px;
    padding: 10px 10px 0 10px;
    background-color: silver;
    text-shadow: 0 0 black;
}
.attachment-row .order-attachment-preview img {
    max-height: 150px;
}
.attachment-default-preview {
    background-image: url(../images/attachment.png);
    display: block;
    width: 64px;
    height: 64px;
    margin: 15px auto;
}

.attachment-row-content {
    display: table;
    width: 99%; 
    border: 2px dashed gray;
    border-radius: 20px;
    background-color: #d1846721 !important;
}
.attachment-row .order-attachment-content {
    width: 70%;
    display: table-cell;
    vertical-align: middle;
    padding: 0 10px;
    text-align: left;
}

.attachment-loader { text-align: center; visibility: hidden; }

.attachment-remove{
    width: 45px;
    height: 45px;
    cursor: pointer;
    margin: 0 0 0 10px;
    display: inline-block;
    text-decoration: none;
    vertical-align: top;
    background-color: silver;
    background-repeat: no-repeat;
    border-radius: 20px;
    background-position: center;
}
.attachment-download {
    width: 45px;
