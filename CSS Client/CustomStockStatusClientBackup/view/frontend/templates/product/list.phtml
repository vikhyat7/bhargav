                    //echo $typeId;
                    $redirectByTypeId = false;

                    if($typeId == 'simple' || $typeId == 'grouped' || $typeId == 'downloadable' || $typeId == 'virtual') {
                        $redirectByTypeId = true;
                    }

                    $linkDetailProduct = $_product->getProductUrl();
